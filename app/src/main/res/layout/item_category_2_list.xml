<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.coordinatorlayout.widget.CoordinatorLayout

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/llView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <RelativeLayout
                android:background="@drawable/bg_ripple_mask"
                android:id="@+id/rlOrganic"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.wasfat.utils.CustomFontTextView
                    android:id="@+id/txtCategory2Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="@string/label_organic"
                    android:layout_toLeftOf="@+id/rlRight"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sdp"
                    app:CustomFontName="ProximaNovaBold" />


                <RelativeLayout
                    android:id="@+id/rlRight"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/bg_round_green">


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_arrow_right_24" />

                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
