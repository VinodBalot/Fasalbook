<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/bg_ripple_mask"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/white" />


            <com.wasfat.utils.CustomFontTextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Food Gains"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                app:CustomFontName="ProximaNovaBold" />


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnSubmit"
            android:layout_below="@id/appbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/llTitle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/white"
                        android:weightSum="10">

                        <com.wasfat.utils.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:text="Name of Item"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaBold" />

                        <com.wasfat.utils.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            android:text="Unit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaBold" />


                        <com.wasfat.utils.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            android:text="Qty"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaBold" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey_400" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        android:weightSum="10">

                        <com.wasfat.utils.CustomFontTextView
                            android:id="@+id/txtProductName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:text="Wheat"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaReg" />

                        <com.wasfat.utils.CustomFontTextView
                            android:id="@+id/txtItemUnit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            android:text="Qtl"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaReg" />


                        <com.wasfat.utils.CustomFontTextView
                            android:id="@+id/txtQty"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            android:text="20"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaReg" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/grey_400" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvImageList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


<!--                        <ImageView-->
<!--                            android:id="@+id/ivImg1"-->
<!--                            android:layout_width="@dimen/_60sdp"-->
<!--                            android:layout_height="@dimen/_60sdp"-->
<!--                            android:src="@drawable/wheat" />-->

<!--                        <ImageView-->
<!--                            android:id="@+id/ivImg2"-->
<!--                            android:layout_width="@dimen/_60sdp"-->
<!--                            android:layout_height="@dimen/_60sdp"-->
<!--                            android:layout_marginLeft="@dimen/_10sdp"-->
<!--                            android:src="@drawable/wheat" />-->

<!--                        <ImageView-->
<!--                            android:id="@+id/ivImg3"-->
<!--                            android:layout_width="@dimen/_60sdp"-->
<!--                            android:layout_height="@dimen/_60sdp"-->
<!--                            android:layout_marginLeft="@dimen/_10sdp"-->
<!--                            android:src="@drawable/wheat" />-->

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llmain"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.wasfat.utils.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Specification"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        app:CustomFontName="ProximaNovaBold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white" />

                    <com.wasfat.utils.CustomFontTextView
                        android:id="@+id/txtSpecifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="1. 20 Qtl RJ-148 Wheat available"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:CustomFontName="ProximaNovaReg" />


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <RelativeLayout
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorDarkGradient">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30ssp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/homeicon" />

        </RelativeLayout>

    </RelativeLayout>

</layout>