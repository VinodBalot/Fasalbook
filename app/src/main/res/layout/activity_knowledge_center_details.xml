<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/bg_ripple_mask"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/white" />


            <com.wasfat.utils.CustomFontTextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Knowledge Center"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                app:CustomFontName="ProximaNovaBold" />


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnSubmit"
            android:layout_below="@id/appbar">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.wasfat.utils.CustomFontTextView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/txtIdeaTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Wheat"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18sdp"
                        app:CustomFontName="ProximaNovaReg" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        android:weightSum="10">

                        <com.wasfat.utils.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="Details : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:CustomFontName="ProximaNovaReg" />

                        <com.wasfat.utils.CustomFontTextView
                            android:id="@+id/txtIdeaDetails"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:gravity="center"
                            android:text="Qtl"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaReg" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/grey_400" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.wasfat.utils.CustomFontTextView
                            android:id="@+id/txtIdeaImageList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:gravity="center"
                            android:text="Images"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaReg" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvImageList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <com.wasfat.utils.CustomFontTextView
                            android:layout_margin="@dimen/_10sdp"
                            android:id="@+id/txtNoImageFound"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="No Images Found"
                            android:textColor="@color/grey_500"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaReg" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/grey_400" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.wasfat.utils.CustomFontTextView
                            android:id="@+id/txtIdeaNewsCuttingList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:gravity="center"
                            android:text="News Cuttings"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaReg" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvNewsCuttingList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <com.wasfat.utils.CustomFontTextView
                            android:layout_margin="@dimen/_10sdp"
                            android:id="@+id/txtNoNewsFound"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="No News Cuttings Found"
                            android:textColor="@color/grey_500"
                            android:textSize="@dimen/_14sdp"
                            app:CustomFontName="ProximaNovaReg" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <RelativeLayout
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorDarkGradient">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30ssp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/homeicon" />

        </RelativeLayout>

    </RelativeLayout>


</layout>
