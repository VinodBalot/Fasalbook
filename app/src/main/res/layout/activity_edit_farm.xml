<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_10sdp">

            <com.wasfat.utils.CustomFontTextView
                android:id="@+id/txtDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Edit Farm Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                app:CustomFontName="ProximaNovaBold" />

            <ImageView
                android:id="@+id/imvClose"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_clear_black_24dp" />

        </RelativeLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">


                <com.wasfat.utils.CustomFontEditText
                    android:id="@+id/edtFarmName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:hint="Farm Name"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/_10sdp" />

                <com.wasfat.utils.CustomFontEditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:hint="Address"
                    android:paddingLeft="@dimen/_10sdp"
                    android:spinnerMode="dropdown" />

                <com.wasfat.utils.CustomFontButton
                    android:id="@+id/btnAddressMap"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:text="@string/label_select_address_from_map"
                    android:background="@drawable/bg_round_green"
                    android:paddingLeft="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:drawableTint="@color/colorBlack"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/select_state"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/colorBlack" />

                    <Spinner
                        android:id="@+id/spinnerState"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:hint="State"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/colorBlack"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey">

                    <EditText
                        android:id="@+id/edtCity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:drawableTint="@color/colorBlack"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/select_City"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/colorBlack" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey">

                    <EditText
                        android:id="@+id/edtBlock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:drawableTint="@color/colorBlack"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/select_block"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/colorBlack" />

                </LinearLayout>


                <com.wasfat.utils.CustomFontEditText
                    android:id="@+id/edtContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:hint="Contact Number"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/_10sdp" />


                <com.wasfat.utils.CustomFontEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:hint="Contact Email"
                    android:inputType="textCapWords"
                    android:padding="@dimen/_10sdp" />

                <com.wasfat.utils.CustomFontEditText
                    android:id="@+id/edtWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:hint="Website"
                    android:inputType="textCapWords"
                    android:padding="@dimen/_10sdp" />

                <com.wasfat.utils.CustomFontEditText
                    android:id="@+id/edtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:hint="Price"
                    android:inputType="textCapWords"
                    android:padding="@dimen/_10sdp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/rlImage"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@drawable/bg_backgound_corner_grey">

                            <com.wasfat.utils.CustomFontTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorBlackTrans"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="Upload Image"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/imvAddMoreLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/imvAddMore"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/bg_ripple_mask"
                                android:src="@drawable/ic_baseline_add_circle_24"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>




                <com.wasfat.utils.CustomFontEditText
                    android:id="@+id/edtFacilities"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:hint="Facilities"
                    android:inputType="textCapWords"
                    android:padding="@dimen/_10sdp" />

                <com.wasfat.utils.CustomFontTextView
                    android:id="@+id/edtAtraction"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    android:background="@drawable/bg_backgound_corner_grey"
                    android:hint="Attraction"
                    android:inputType="textCapWords"
                    android:padding="@dimen/_10sdp" />


                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbPublished"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"/>

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/farm_tourism_publish_message"/>


                </LinearLayout>

                <com.wasfat.utils.CustomFontButton
                    android:id="@+id/btnAddFarmTourism"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_round_green"
                    android:text="Update Details"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>
